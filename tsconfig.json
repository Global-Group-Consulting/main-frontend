{
  "compilerOptions": {
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/moment",
      "@nuxtjs/auth",
      "@nuxtjs/auth-next",
      "nuxt-i18n",
      "@nuxtjs/vuetify",
      "@types/jest"
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
